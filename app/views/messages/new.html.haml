.contents
  .container
    = form_with(model: @message, local: true, class: :form_box) do |f|
      %h3 投稿する
      = f.text_field :grade, placeholder: "学年", class: "detail-s"
      = f.text_field :subject, placeholder: "科目", class: "detail-s"
      = f.text_field :text, placeholder: "題名", class: "detail-m"
      = f.text_area :text, placeholder: "説明", rows: "10", class: "detail-l"
      -# = f.text_field :image, placeholder: "Image Url", class: "text-center", id: "test-id"
      = f.file_field :image, placeholder: "画像ファイルを選択", class: "detail-m"
      = f.submit "送信" ,class: "submit-new"